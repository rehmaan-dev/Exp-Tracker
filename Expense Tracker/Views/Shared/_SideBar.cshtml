@{
    // Define the menu items for the sidebar
    List<Object> menuItems = new List<Object>();

    // Add menu items with separators and icons
    menuItems.Add(new
    {
        text = "General",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        iconCss = "fa-solid fa-box",
    });
    menuItems.Add(new
    {
        text = "Categories",
        url = "/Category",
        iconCss = "fa-solid fa-folder-closed",
    });
    menuItems.Add(new
    {
        text = "Transactions",
        iconCss = "fa-solid fa-arrow-right-arrow-left",
        url = "/Transaction"
    });

    menuItems.Add(new
    {
        text = "Extras",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "Reports",
        iconCss = "fa-solid fa-chart-simple",
        url = "#"
    });
    menuItems.Add(new
    {
        text = "Settings",
        iconCss = "fa-solid fa-gear",
        url = "#"
    });
}

<!-- Sidebar component -->
<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
             target=".dock-target" enableGestures="false">
    <e-content-template>
        <!-- Logo and toggle button -->
        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/logo.png" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i> <!-- Toggle button for sidebar -->
        </div>

        <!-- User profile section -->
        <div class="profile-wrapper">
            <img class="profile-pic" src="~/user.png" />
            <div class="titles d-flex flex-column ps-3">
                @* <h6 class="mb-0">Wallet App</h6> *@
                <span class="text-muted">Imdadul Rehmaan</span>
            </div>
        </div>

        <!-- Menu component -->
        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<!-- Script to handle sidebar toggling -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the sidebar instance
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        // Set up the toggle functionality
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });
</script>
